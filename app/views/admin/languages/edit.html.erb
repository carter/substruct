<div id="left">
	<h1>Edit a language</h1>
	<%- form_for :language, :url => {:action => :update, :id => @language.id} do |f| -%>
		<%= render :partial => 'form', :object => f %>
	
		<p><%= submit_tag 'Update' %></p>
	
	<%- end -%>
</div>

<div id="right">
		<%= link_to 'Remove this language', {:action => 'destroy', :method => :delete, :id => @language.id}, :class => 'button hundredfifty', :confirm => "Are you sure you want to delete this language?" %>
</div>

<br class="clear">